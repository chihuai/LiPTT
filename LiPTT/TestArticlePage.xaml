<Page
    x:Class="LiPTT.TestArticlePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LiPTT"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <CollectionViewSource x:Key="src" Source="{Binding Path=ViewSource}"/>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Button Content="AddItem" Click="Button_Click"></Button>
            </Grid>
            
            <Grid Grid.Row="1">
                <ScrollViewer>
                    <StackPanel x:Name="stackpanel" VirtualizingStackPanel.VirtualizationMode="Recycling">
                        <ItemsControl x:Name="MyControl" ItemsSource="{Binding Source={StaticResource src}}">
                            <DataTemplate x:DataType="TextBlock">
                                <TextBlock Text="{x:Bind Text}" />
                            </DataTemplate>
                            <DataTemplate x:DataType="HyperlinkButton">
                                <HyperlinkButton Content="{x:Bind Content}" NavigateUri="{x:Bind NavigateUri}"/>
                            </DataTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
                <ListView>

                </ListView>
            </Grid>
        </Grid>
        
        
    </Grid>
</Page>
