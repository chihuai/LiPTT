                                        <TextBlock Text="{x:Bind Date, Converter={StaticResource MyDateTimeOffsetStringFormatConverter}, ConverterParameter='{}{0:MM/dd HH:ss}'}" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="20" Padding="10,0,10,0" Foreground="Aquamarine" IsTextSelectionEnabled="True" />
